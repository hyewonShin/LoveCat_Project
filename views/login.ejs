<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css" media="print" onload="this.media='all'">  
    <title>로그인 화면</title>
</head>

<body>
  <h2>로그인화면입니다 🥰</h2>
  <input type="text" placeholder="아이디" id="id" /> </br>
  <input type="password" placeholder="비밀번호" id="pw" /></br>
  <button type="button" onclick="LoginIdCheck();">로그인</button>
  <button type="button" onClick="location.href='/user/register'">회원가입</button>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
  crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  $(document).ready(function () {
       if (localStorage.getItem("token")) {
           alert("이미 로그인이 되어있습니다.")
           window.location.replace("/");
        } 
  });

  function LoginIdCheck() {
    let id = $("#id").val();
    let pw = $("#pw").val();
    $.ajax({
      type: "POST",
      url: "/user/login",
      data: { id, pw },
      success: function (response) {
       
        if(response.success === false){
          alert(response.message)
        }else{
          let token = response.token
          localStorage.setItem("token", token.token)
          localStorage.setItem("RefreshToken", token.Refreshtoken)
          alert("로그인이 완료되었습니다!")
          window.location.replace("/");
        }
      },
      error: function (error) {
       alert("로그인 에러");
      },
    });
  }

</script>
</body>
</html>